#use "topfind";;
#require "zarith";;
#directory "_build/src";;
#load "polynomial.cma";;

#install_printer Var.print;;
#install_printer Polynomial.print;;

let x = Var.make "x";;
let y = Var.make "y";;
let z = Var.make "z";;

let p = Polynomial.of_list
  [ [x, 1; y, 2], Z.of_int 5
  ; [x, 1], Z.of_int 3
  ; [y, 2], Z.of_int ~-17
  ; [x, 1], Z.of_int 5
  ; [], Z.of_int 42
  ]
;;

Format.printf "p = @[%a@]@." Polynomial.print p;;

Format.printf "p + p = @[%a@]@."
  Polynomial.print (Polynomial.add p p);;

Format.printf "p Ã— p = @[%a@]@."
  Polynomial.print (Polynomial.mult p p);;
